@{
    Layout = null;
}
<h3>{{title}}</h3>
<hr />
<form role="form" style="max-width:500px;">
    <strong class="error">{{ErrorMessage}}</strong>
    <div class="form-group">
        <label for="firstname">
            First Name
        </label>
        <input type="text" class="form-control" id="firstname" ng-model="Employee.FirstName" />
    </div>

    <div class="form-group">
        <label for="lastname">
            Last Name:
        </label>
        <input type="text" class="form-control" id="lastname" ng-model="Employee.LastName" />
    </div>

    <div class="form-group">
        <label for="province">
            Province:
        </label>
        <select class="form-control" name="province" ng-model="Employee.Province" ng-options="c.Value as c.Text for c in provinces" ng-change="Cities()">
            <option value="">-- Select Province --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="city">
            City:
        </label>
        <select class="form-control" name="city" ng-model="Employee.City" ng-disabled="!province2cities" ng-options="s.Value as s.Text for s in province2cities" ng-change="Towns()">
            <option value="">-- Select City --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="state">
            Town:
        </label>
        <select class="form-control" name="town" ng-model="Employee.Town" ng-disabled="!city2towns" ng-options="s.Value as s.Text for s in city2towns">
            <option value="">-- Select Town --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="address">
            Address:
        </label>
        <input type="text" class="form-control" ng-model="Employee.Address" name="address" />
    </div>

    <div class="form-group">
        <label for="dob">
            Date of Birth:
        </label>
        <input type="date" class="form-control" id="birthdate" ng-model="Employee.BirthDate" />
    </div>

    <div class="form-group">
        <label for="description">
            Description:
        </label>
        <textarea rows="5" cols="10" class="form-control" id="description" ng-model="Employee.Description"></textarea>
    </div>

    <div class="form-group checkbox">
        <label>
            <input type="checkbox" ng-model="Employee.IsActive" />Active
        </label>
    </div>

    <a href="#/List" class="btn btn-info">Back to List</a>

    <button class="btn btn-default" ng-click="save()">
        Submit
    </button>
</form>