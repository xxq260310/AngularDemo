@{
    Layout = null;
}
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Employee List
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div style="left: 16px; position: relative;">
                <a href="#/UserProfiles/Create" class="btn btn-default" title="Create New Employee">Create</a>
            </div>
            <label>
                <input type="text" placeholder="Search Any..." ng-model="search.$" class="navbar-text form-control" style="width:174px;" />
                @*<span class="glyphicon-search glyphicon" style="position:relative;top:23px;right:40px;"></span>*@
            </label>
            <label>
                <input type="text" placeholder="Search FirstName..." ng-model="search.FirstName" class="navbar-text form-control" style="width:174px;" />
            </label>
            <label>
               <input type="checkbox" ng-model="strict" class="checkbox" style="top: -10px; position: relative;"/> <br />
            </label>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th><a href="" ng-click="predicate='EmployeeId'; reverse=!reverse">EmployeeId</a></th>

                                <th>First Name</th>

                                <th>Last Name</th>

                                <th>Description</th>

                                <th>Province</th>

                                <th>City</th>

                                <th>Town</th>

                                <th>Address</th>

                                <th>Date of Birth</th>

                                <th>Is Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in employees | filter: search : strict | orderBy: predicate : reverse">
                                <td>
                                    <a href="#/UserProfiles/Edit/{{ item.EmployeeId }}" class="glyphicon glyphicon-edit"></a>
                                </td>
                                <td>
                                    <a href="#/UserProfiles/Delete/{{ item.EmployeeId }}" class="glyphicon glyphicon-trash"></a>
                                </td>
                                <td>
                                    <a href="#/UserProfiles/Details/{{ item.EmployeeId }}" class="glyphicon glyphicon-th-list"></a>
                                </td>
                                <td>{{ item.EmployeeId}}</td>

                                <td>{{ item.FirstName }}</td>

                                <td>{{ item.LastName }}</td>

                                <td>{{ item.Description }}</td>

                                <td>{{ item.Province }}</td>

                                <td>{{ item.City }}</td>

                                <td>{{ item.Town }}</td>

                                <td>{{ item.Address }}</td>


                                <td>{{ item.BirthDate | date }}</td>

                                <td>
                                    <span class="label" ng-class="{true: 'label-success', false: 'label-danger'}[item.IsActive]">
                                        {{ item.IsActive ? 'Active' : 'In Active' }}
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
